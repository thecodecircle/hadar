<h2>הרשמה</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" },
                label: "שם שיוצג לכולםן"%>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" },
                label: "אימייל"%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} תווים לפחות" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label: "סיסמה" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                label: "וידוא סיסמה" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "הרשמה", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
