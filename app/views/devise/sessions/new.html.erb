<h2>כניסה</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email",class:"form-control mb-3"  },
                label_html: {class:"form-label"},
                label: "אימייל" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password",class:"form-control mb-3"  },
                label_html: {class:"form-label"},
                label: "סיסמה" %>
    <%= f.input :remember_me, as: :boolean, label: "זכרו אותי" if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "כניסה", class: "btn btn-cta w-100" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
