<h2>כניסה</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: "אימייל" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label: "סיסמה" %>
    <%= f.input :remember_me, as: :boolean, label: "זכרו אותי" if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "כניסה", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
