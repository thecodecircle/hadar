<p id="notice"><%= notice %></p>

<h1>אירועים</h1>

<table>
  <thead>
    <tr>
      <th>שעה</th>
      <th>תיאור</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.time.strftime("%H:%M")  %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'עריכה', edit_event_path(event) %></td>
        <td><%= link_to 'מחיקה', event, method: :delete, data: { confirm: 'בטוח.ה?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'דיווח על אירוע', new_event_path %>
